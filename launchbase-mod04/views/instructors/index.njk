{% extends "layout.njk" %}

{% block content %}
    
  <div class="card table-container">
    <a href="/instructors/create">Novo</a>
    <table width="100%"> <!-- Tabela HTML -->
      <thead> <!-- Cabeçalho da tabela -->
        <tr> <!-- Linha da Tabela -->
          <th>Instructor</th> <!-- Coluna da Tabela -->
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody> <!-- Corpo da tabela -->
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background-image: url({{ instructor.avatar_url }})"></span>
              {{ instructor.name }}
            </td> <!-- Coluna do corpo -->
            <td>
              <span>{{ instructor.services }}</span>
            </td>
            <td><a href="/instructors/{{ instructor.id }}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}