{% extends "layout.njk" %} <!-- Quando chegar aqui o servidor vai ver que precisa ir para o arquivo layout.html, porém ele não vai de mãos vazias -->

<!-- Ele vai para a página layout levando o que tem dentro desse block content e irá colocar isso dentro do block content que tem no arquivo layout.html -->
{% block head %}
    <title>Sobre | {{ about.name }}</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.description }}</p>
    </div>

    <div id="menu-footer" class="menu">
        {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
        {% endfor %}
    </div>
{% endblock %}
