{% extends "layout.njk"%}

{% block head %}
    <title>Vídeos | Pedro Baltar</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="wrapper">
        <h1>Vídeos que me ajudaram</h1>
    </div>


    <section class="cards video">
        {% for item in itens %} <!-- Criando uma estrutura de repetição com nunjucks, vai repetir 6 vezes -->
            <div class="card" id="{{item.id}}"> <!-- Para relacionar itens do back-end para o front-end com o nunjucks usamos duas {{chaves}} passando o nome da variavel, no caso item que vem da estrutura de repetição e colocamos um '.' e o nome do objeto -->
                <div class="card_image_container {{ 'featured-wrapper' if item.featured }}">
                    <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
                    {% if item.featured %}
                        <div class="featured">Featured</div>
                    {% endif %}
                </div>
                <div class="card_content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card_info">
                    <p>{{item.duration}}</p>
                    <p class="card_price">{{item.price}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
